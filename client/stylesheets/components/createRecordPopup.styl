.popup-layout
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background rgba( 0, 0, 0, 0.7 )
  transition opacity 500ms
  visibility hidden
  opacity 0
  z-index 10

.popup-open
  visibility visible
  opacity 1

.popup-content
  display flex
  flex-direction column
  position absolute
  top 50%
  left 50%
  transform translate( -50%, -80% )
  background-color white
  font-size 1.3rem
  padding 1rem 1.5rem
  width 40%
  border-radius 0.5rem

  *
    color #333

.popup-content .close
  position absolute
  right 1.5rem
  transition all 200ms
  font-size 30px
  font-weight bold
  text-decoration none

.popup-content .close:hover
  color cadetblue

.popup-content .input-field
  display flex
  margin 3px 0

  > span
    width 40%

  > select
  > input
    width 60%
    text-indent 3px
    border 1px solid cadetblue
    border-radius 2px

.popup-button-group
  margin-top 1rem
  display flex
  justify-content flex-end

  > button
    display flex
    justify-content center
    width 25%
    color cadetblue
    border-radius 0.15em
    line-height 1.8rem
    text-decoration none
    text-transform uppercase
    font-weight 400
    color #FFFFFF
    background-color cadetblue
    box-shadow inset 0 -0.6em 0 -0.35em rgba( 0, 0, 0, 0.17 )
    text-align center

    &:hover
      background-image linear-gradient( to top, #c6cacc 0%, #a0b0ba 100% )
      color black

    &:disabled
      background-image linear-gradient( to bottom, #c6cacc 0%, #869096 100% )
      color black
