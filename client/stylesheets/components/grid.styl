selectable(value)
  -webkit-touch-callout: value
  -webkit-user-select: value
  -khtml-user-select: value
  -moz-user-select: value
  -ms-user-select: value
  -o-user-select: value
  user-select: value

tr.selected
  background-color: #b8bcbf
  > td
    background-color: #b8bcbf

.grid
  display flex
  flex-direction column
  width 100%
  padding: 1.5rem 0 3rem

table
  border-spacing 1px

tr:nth-child(even)
  background-color: #a9d2db

.disabled tr:nth-child(even)
  background-color: #cbd2d8
  &:hover
    background-color: #b8bcbf

tr
  transition all 200ms ease-in
  *
    font-size 1rem
    padding: 0
  &:hover
    background-color: #b8bcbf

.header-content
  display flex
  justify-content center
  width 100%
  > svg
    padding 0 0.3rem 0

th
  background-color cadetblue 
  color whitesmoke 
  font-weight 600
  z-index: 5
  selectable(none)
  &:hover 
    background-color cadetblue

.sticky
  position fixed
  width 100vw
  top 0

.grid-cell
  margin 0

.cell-checkbox
  min-width 2rem
  width 1.5%
  > div 
    display flex
    justify-content center
    > input[type="checkbox"]
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      outline: 0;
      background: rgba(0, 0, 0, 0);
      height: 1.2rem
      width: 1.2rem
      border: 1px solid cadetblue;
      border-radius: 3px
      text-align: center
      &:after
        content " "
      &:checked
        filter brightness(80%)
        &:after
          content "âœ”"
          color cadetblue
          font-size 1.1rem
      &:hover
        filter brightness(80%)


.cell-number
  width 5%
  > div
    > input 
      text-align center

.cell-title
  width 20%

.cell-authorId
.cell-publicationDate
  width 10%

.grid-textarea
  height 1rem
  white-space: nowrap
  overflow:hidden

.grid-textarea .readonly
  &:selection
    background-color: rgba( 0, 0, 0, 0 )

.grid-textarea
.cell-lookup
.grid-input
  width 100%
  border 0
  background-color rgba( 0, 0, 0, 0 )
  font-weight 400
  color black
  font-family: 'Roboto', sans-serif
  transition all 300ms ease-in
  &:focus
    outline: none
  &:selection
    background: rgba( 0, 0, 0, 0 )

.expanded
  height: 4rem;
  overflow: auto

.input-edit
  background-color cadetblue
