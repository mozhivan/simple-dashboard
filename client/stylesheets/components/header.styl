.header
	display flex
	height 2.2rem
	justify-content space-between
	z-index: 5
	table-layout fixed
	border-collapse collapse
	*:focus
		outline: none

.header-links
	display block

.header-links
	> a
		display inline-block
		background-color cadetblue
		padding 0 0.5rem
		color white
		text-align center
		vertical-align top
		line-height 1.8rem
		text-transform uppercase
		text-decoration none
		position relative
		&:hover
			background-image: linear-gradient(to top, #c6cacc 0%, #a0b0ba 100%)
			color black

.header-links .active-link
	background-color aliceblue
	color black
	font-weight bold
	&:hover
		background-color aliceblue
		background-image: none

.header-buttons
	display flex
	justify-content flex-end

.header-buttons button
	display flex
	justify-content center
	margin 0 4 4 0
	border-radius 0.15em
	height 1.8rem
	width 8rem
	text-decoration none
	text-transform uppercase
	font-weight 400
	color #FFFFFF
	background-color cadetblue
	box-shadow inset 0 -0.6em 0 -0.35em rgba( 0, 0, 0, 0.17 )
	text-align center
	position relative
	> svg
		padding 0 0.2rem 0 0 

	&:hover
		background-image: linear-gradient(to top, #c6cacc 0%, #a0b0ba 100%)
		color black
	&:disabled
		background-image linear-gradient( to bottom, #c6cacc 0%, #869096 100% )
		color black

.header-buttons button
	top 0.1em

.header-status
	display block
	font-weight: 700
	color rgb(50, 50, 50)
	opacity 0

.fade-in
	opacity 1
	animation: fadein 0.6s;

.fade-out
	opacity: 0
	animation: fadeout 0.4s;

.header-status p
	display inline-block
	text-align center
	vertical-align middle
	font-size 14

@keyframes fadein
	from 
		opacity 0
	to
		opacity 1

@keyframes fadeout 
	from
		opacity 1
	to
		opacity 0
